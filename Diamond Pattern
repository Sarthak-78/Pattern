#include <iostream>
int main(){
    int N;
    std::cin >> N;
    int n;
    if(N%2==1){
        n = (N+1)/2;
        for(int i=1; i <=n; i++){
            for(int j = 1; j<=(n-i); j++){
                std::cout << " ";
            }
            for(int k=1; k<=2*i-1; k++){
                std::cout << '*';
            }
            std::cout << "\n";
        }
        int m = (N-1)/2;
        for(int i=1; i<=m; i++){
            for(int j=1; j<=i; j++){
                std::cout << " ";
            }
            for(int k=1; k<=2*(m-i)+1; k++){
                std::cout << '*';
            }
            std::cout << std::endl;
        }
    }
    else{
        n = N/2;
        for(int i=1; i <=n; i++){
            for(int j = 1; j<=(n-i); j++){
                std::cout << " ";
            }
            for(int k=1; k<=2*i-1; k = k+1){
                std::cout << '*';
            }
            std::cout << "\n";
        }
        for(int i=1; i<=n; i++){
            for(int j=1; j<i; j++){
                std::cout << " ";
            }
            for(int k=1; k<=2*(n-i)+1; k++){
                std::cout << '*';
            }
            std::cout << std::endl;
        }
    

    }
}
